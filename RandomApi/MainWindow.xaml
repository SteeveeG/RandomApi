                Style="{StaticResource Button}"
                Command="{Binding ApiCallCommand}" />


        <Grid Row="2" Margin="35">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="{Binding ImgLink}"
                   Visibility="{Binding IsImgVisible ,
         Converter={StaticResource BoolToVisibilityConverter}}" />
